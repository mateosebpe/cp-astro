---
interface Props {
    currentPage: string;
    nextPage: string;
    prevPage: string;
    lastPage: string;
}

const {currentPage, nextPage, prevPage, lastPage} = Astro.props;
---

<nav aria-label="Page navigation example" class="text-center py-12">
    <ul class="inline-flex -space-x-px text-sm">
      <li>
        <a href='/columna/' class="flex items-center justify-center px-3 h-8 ms-0 leading-tight text-gray-500 bg-white border border-e-0 border-gray-300 rounded-s-lg hover:bg-gray-100 hover:text-gray-700 " class:list={[{'hidden': currentPage == '1'}]}>1 ...</a>
      </li>
      <li>
        <a href={prevPage} class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700" class:list={[{'hidden': currentPage == '1'}]}>{(parseInt(currentPage) - 1)}</a>
      </li>
      <li>
        <a href="#" aria-current="page" class="flex items-center justify-center px-3 h-8 text-primary border border-gray-300 bg-gray-100">{currentPage}</a>
      </li>
      <li>
        <a href={nextPage} class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 hover:bg-gray-100 hover:text-gray-700" class:list={[{'hidden': currentPage == lastPage}]}>{currentPage + 1}</a>
      </li>
      <li>
        <a href={'/columna/' + lastPage} class="flex items-center justify-center px-3 h-8 leading-tight text-gray-500 bg-white border border-gray-300 rounded-e-lg hover:bg-gray-100 hover:text-gray-700" class:list={[{'hidden': currentPage == lastPage}]}>... {lastPage}</a>
      </li>
    </ul>
  </nav>