---
import { collections } from '../content/config';
import Share from '../components/Share.astro'

interface Props {
    header: string,
    subheader: string,
    bgURL?: string;
    date: string;
    collection: string;
    slug: string;
    tags?: string;
}

const {header, subheader, bgURL,date, collection, slug, tags} = Astro.props;
---
<section class="lg:px-64 md:px-32 px-4 text-gray-700 mt-16">
    
    <h1 itemprop="headline" class="font-bold tracking-tight text-gray-800 text-3xl md:text-3xl lg:text-4xl  text-pretty text-center">{header}</h1>
    <div class="flex gap-4 justify-center mt-10 text-gray-500 flex-wrap">
        <a href=`/${collection}`>
            <svg xmlns="http://www.w3.org/2000/svg" class="inline icon icon-tabler icon-tabler-arrow-left" width="24" height="24" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M5 12l14 0" /><path d="M5 12l6 6" /><path d="M5 12l6 -6" /></svg>
            Volver
        </a>
        <p>|</p>
        <p itemprop="datePublished" class="flex items-center"><svg  xmlns="http://www.w3.org/2000/svg"  width="20"  height="20"  viewBox="0 0 24 24"  fill="none"  stroke="currentColor"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-calendar-month inline mr-1"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M4 7a2 2 0 0 1 2 -2h12a2 2 0 0 1 2 2v12a2 2 0 0 1 -2 2h-12a2 2 0 0 1 -2 -2v-12z" /><path d="M16 3v4" /><path d="M8 3v4" /><path d="M4 11h16" /><path d="M7 14h.013" /><path d="M10.01 14h.005" /><path d="M13.01 14h.005" /><path d="M16.015 14h.005" /><path d="M13.015 17h.005" /><path d="M7.01 17h.005" /><path d="M10.01 17h.005" /></svg>{date}</p>
        <p>|</p>
        <p>{subheader}</p>
        
    </div>
    <div class="mt-4 flex flex-wrap gap-1 justify-center " itemprop="keywords">
        {tags? tags.split(",").map(tag => <span class="inline-block bg-gray-200 rounded-full px-2 py-1/2 text-xs font-semibold text-gray-700">{tag}</span>) : ''}
       </div>
    {bgURL? <img itemprop="image" src={bgURL} alt={"Imagen destacada del artÃ­culo" + header} class="w-full aspect-video object-cover mt-12"> : ''}
    <Share collection={collection} slug={slug}></Share> 
</section>