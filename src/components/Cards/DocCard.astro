---
import Link from '../Link.astro'

interface Props {
  post: any;
}

const {post} = Astro.props;
const {title, category, date} = post.data
---

<section class="relative flex flex-col mt-6 text-gray-700 bg-white shadow-md bg-clip-border rounded-xl w-100">
  <a href={`/${post.collection}/${post.slug}`}> 
  <div class="p-6">
        <slot/>
      
        <h5 class="block mb-2 font-sans text-xl antialiased font-semibold leading-snug tracking-normal text-blue-gray-900">
            {title}
          </h5>
      </a>
      <span class="inline-block font-sans text-base antialiased font-light leading-relaxed">
        {date}
      </span>
      <span class="inline-block font-sans text-base antialiased font-light leading-relaxed bg-gray-100 px-2 rounded-full ms-2">{category}</span>
    </div>
    
  </a> 
  </section> 