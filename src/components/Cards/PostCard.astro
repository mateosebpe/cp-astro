---
import TitleCard from './TitleCard.astro';

interface Props {
    title: string;
    edition: string;
    picture: string;
    date: string;
    slug: string;
    collection: string;
    tags?: string;
}
const { title, edition, picture, date, slug, collection, tags } = Astro.props;
---

<section>
    <a  href={`/${collection}/${slug}`}
    class="rounded-lg hover:shadow-lg shadow bg-clip-border basis-1/3 box-border"
>
    <img src={picture} alt={"Imagen de publicaciÃ³n titulada " + title}  class="aspect-video overflow-hidden object-cover transition-all duration-300" loading="lazy"/>
    
    <div class="relative p-4">
        <div class="  absolute -top-3">
            {tags? tags.split(",", 1).map(tag => <span class="inline-block bg-primary rounded-full px-2  text-sm text-white mr-2 mb-2">{tag}</span>) : ''}
            </div>
        <h4 class="text-sm mt-2  font-bold  text-primary">{edition}</h4>
        <TitleCard>{title}</TitleCard>
        <h5 class="text-xs text-gray-500">{date}</h5>
    </div>
</a>
</section>