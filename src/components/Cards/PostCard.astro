---
import TitleCard from './TitleCard.astro';

interface Props {
    title: string;
    metatitle?: string;
    category: string;
    picture: string;
    date: string;
    slug: string;
    collection: string;
    tags?: string;
    horizontal?: boolean;
}
const { title, category, picture, date, slug, collection, metatitle,  horizontal = false} = Astro.props;
---

<section class="rounded-lg  bg-clip-border basis-1/3 box-border hover:shadow-lg shadow">
    <a  href={`/${collection}/${slug}`}
    class:list={[{
        'flex flex-col md:flex-row': horizontal
    }
    ]}
>
    <img class:list={[{
        'basis-1/2': horizontal
    }
    ]} src={picture} alt={"Imagen de publicaciÃ³n titulada " + title}  class="aspect-video overflow-hidden object-cover transition-all duration-300" loading="lazy"/>
    
    <div class="relative p-4" class:list={[{
        'basis-1/2': horizontal
    }
    ]}>
        <div class="absolute -top-3"
        class:list={[{
            'absolute -top-3 md:relative md:top-0': horizontal
        }
        ]}>
        </div>
        <h4 class="text-sm mt-2  font-bold  text-primary">{category}</h4>
        <p class="mt-2 text-sm text-gray-800">{metatitle? metatitle.toLocaleUpperCase() : ''}</p>
        <TitleCard>{title}</TitleCard>
        <h5 class="text-xs text-gray-500">{date}</h5>
    </div>
</a>
</section>