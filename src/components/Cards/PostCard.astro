---
interface Props {
    title: string;
    edition: string;
    picture: string;
    date: string;
    slug: string;
    collection: string;
}
const { title, edition, picture, date, slug, collection } = Astro.props;
---

<a  href={`/${collection}/${slug}`}
    class="rounded-lg shadow-lg hover:shadow bg-clip-border basis-1/3 box-border"
>
    <img src={picture} alt=""  class="aspect-video overflow-hidden object-cover transition-all duration-300" loading="lazy"/>
    <div class="relative p-4">
        <h5 class="bg-primary font-bold p-1 text-white inline p-1 text-xs absolute -top-6">{edition}</h5>
        <h3 class="text-2xl font-bold leading-7">{title}</h3>
        <p class="text-xs text-gray-500 mt-2">{date}</p>
    </div>
</a>

