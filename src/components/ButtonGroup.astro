---
interface Props {
    buttons: Array<{name: string, href: string}>;
}

const {buttons} = Astro.props;

---
<div class="inline-flex flex-wrap justify-center text-center rounded-md mb-8" role="group">

        {
        buttons? buttons.map(button =>{
            return <a href={button.href} class="px-4 py-2 text-sm font-medium text-gray-900 bg-white border-t lg:border-b border-gray-200 hover:bg-gray-100 hover:text-primary focus:z-10 focus:ring-2 focus:ring-gray-700 focus:text-primary">
    {button.name}
  </a>
        }) : ''
        }
  </div>