---
interface Props {
    header: string,
    subheader: string,
    bgURL: string;
}

const {header, subheader, bgURL} = Astro.props;
---



<section class:list={["bg-[url('"+ bgURL +"')]"]} class="bg-gradient-to-r from-red-500 to-red-800 bg-center bg-no-repeat bg-cover  bg-gray-700 bg-blend-multiply">
    <div class="px-4 mx-auto max-w-screen-xl text-center py-24 lg:py-40">
        <h1 class="mb-4 font-extrabold tracking-tight leading-none text-white text-4xl md:text-5xl lg:text-6xl">{header}</h1>
        <p class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48 text-pretty">{subheader}</p>
        <div class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0">
          <slot/>
        </div>
    </div>
</section>

