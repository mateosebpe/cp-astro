---
interface Props {
    href: string;
    white?: boolean;
    outlined?: boolean;
}

const { href, white = false, outlined= false } = Astro.props;
---

<a
    href={href}
    class:list={[
        "text-center flex flex-row items-center justify-center   gap-2 select-none rounded-lg py-2 px-3  align-middle font-sans  font-semibold transition-all",
        {
            'rounded-lg bg-primary hover:bg-white text-white hover:text-gray-800': !white && !outlined,
            'rounded-lg border border-white text-white hover:bg-white hover:text-gray-800 hover:border-transparent ': white && outlined,
            'rounded-lg border border-gray-900 text-gray-800 hover:bg-gray-700 hover:text-white hover:border-transparent': !white && outlined,
            'rounded-lg bg-white hover:bg-primary text-gray-800 hover:text-white': white && !outlined
        },
    ]}>
    <slot name="before"/>
    <slot/>
    <slot name="after"/>
    </a>
