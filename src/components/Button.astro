---
interface Props {
    href: string;
    white?: boolean;
    outlined?: boolean;
}

const { href, white = false, outlined= false } = Astro.props;
---

<a
    href={href}
    class:list={[
        "flex flex-row items-center gap-2 select-none rounded-lg py-3 px-6 text-center align-middle font-sans text-xs font-bold transition-all",
        {
            'rounded-lg bg-red-600 hover:bg-white text-white hover:text-gray-800': !white && !outlined,
            'rounded-lg border border-white text-white hover:bg-white hover:text-gray-800 hover:border-transparent': white && outlined,
            'rounded-lg border border-gray-900 text-gray-800 hover:bg-gray-700 hover:text-white hover:border-transparent': !white && outlined,
            'rounded-lg bg-white hover:bg-red-600 text-gray-800 hover:text-white': white && !outlined
        },
    ]}>
    <slot name="before"/>
    <slot/>
    <slot name="after"/>
    </a>
